upstream <%= @service_name %>_containers {
  <% ::Range.new(0, @upstream_instances - 1).each do |num| %>
  server 127.0.0.1:<%= @upstream_port_range_start + num %>;
  <% end %>
}

server {
  listen 80;
  server_name <%= @server_name %>;

  access_log <%= @access_log %> combined;
  error_log <%= @error_log %> <%= @debug ? 'debug' : 'error' %>;

  keepalive_timeout 100;
  charset utf-8;

  location / {
    <% @internal_networks.each do |network| %>
    allow <%= network %>;
    <% end %>
    deny all;

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;

    proxy_pass http://<%= @service_name %>_containers/;
    proxy_redirect off;

    proxy_http_version 1.1;
    chunked_transfer_encoding off;
    proxy_buffering off;
    proxy_cache off;

    client_max_body_size 1m;
  }
}
